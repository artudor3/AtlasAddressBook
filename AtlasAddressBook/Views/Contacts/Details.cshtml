@model AtlasAddressBook.Models.Contact
@using AtlasAddressBook.Services.Interfaces
@inject IImageService _ImageService

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Contact</h4>

    <!-- Address Card -->




    <div class="glass-cf-style darkGlass p-2">
        <div class="row">
            <div class="col-12 col-md-4">
                <img class="img-fluid" src="@_ImageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType)" />
            </div>
            <div class="col-12 col-md-8">
                <div class="row gy-2">
                    <div class="col-12 col-md-6">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" readonly class="form-control" id="FirstName" value="@Model.FirstName" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" readonly class="form-control" id="LastName" value="@Model.LastName" />
                    </div>
                    <div class="col-12 col-md-7">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" readonly class="form-control" id="Email" value="@Model.Email" />
                    </div>
                    <div class="col-12 col-md-5">
                        <label for="PhoneNumber" class="form-label">Phone</label>
                        <input type="tel" readonly class="form-control" id="PhoneNumber" value="@Model.PhoneNumber" />
                    </div>
                    <div class="col-12">
                        <label for="Address1" class="form-label">Address</label>
                        <input type="text" readonly class="form-control" id="Address1" value="@Model.Address1" />
                    </div>
                    <div class="col-12">
                        <label for="Address2" class="form-label">Address 2</label>
                        <input type="text" readonly class="form-control" id="Address2" value="@Model.Address2" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="City" class="form-label">City</label>
                        <input type="text" readonly class="form-control" id="City" value="@Model.City" />
                    </div>
                    <div class="col-12 col-md-2">
                        <label for="State" class="form-label">State</label>
                        <input type="text" readonly class="form-control" id="State" value="@Model.State" />
                    </div>
                    <div class="col-12 col-md-4">
                        <label for="ZipCode" class="form-label">Zip</label>
                        <input type="text" readonly class="form-control" id="ZipCode" value="@Model.ZipCode" />
                    </div>
                    <div class="col-12">
                        <label for="Birthday" class="form-label">Birthday</label>
                        <input type="text" readonly class="form-control" id="Birthday" value="@Model.Birthday" />
                    </div>
                    <div class="col-12">
                        @foreach(var category in Model.Categories)
                        {
                            <div>
                                <input type="checkbox" readonly class="form-check-input" name="CategoryList" value="@category.Id" />
                                <label class="form-check-label" for="CategoryList">@category.Name</label>
                            </div>
                        }
                    </div>
                </>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
