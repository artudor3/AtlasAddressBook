@model IEnumerable<AtlasAddressBook.Models.Contact>
@using AtlasAddressBook.Services.Interfaces
@inject IImageService _ImageService


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<p>
    <button class="glass-button" asp-action="Create">Create New</button>
</p>



@foreach (var item in Model!)
{
    <div class="card mb-3 glass-cf-style darkGlass">
        <div class="row g-0">
            <div class="col-md-4">
                @if (item.ImageData is not null)
                {
                    <img src="@_ImageService.ConvertByteArrayToFile(item.ImageData, item.ImageType!)" class="contactList-image" alt="...">                    
                }
                
                
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h5>
                    <div class="card-text">
                        Email: @Html.DisplayFor(modelItem => item.Email)
                    </div>
                    <div class="card-text">
                        Phone: @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </div>
                    <a asp-action="Edit" asp-route-id="@item?.Id">
                        <i class="bi-pencil-fill" style="font-size: 1.5rem;"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item?.Id">
                        <i class="bi-person-fill" style="font-size: 1.5rem;"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item?.Id">
                        <i class="bi-trash-fill" style="font-size: 1.5rem;"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

}
